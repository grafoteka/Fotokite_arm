<launch>

  <!-- If true, loads trajectory controllers. Otherwise, loads individual position controllers -->
  <arg name="run_trajectory" default="true"/>

  <!--param name="robot_description" command="cat $(find fotokite_description)/robots/robot.xacro" /-->

  <!-- Publish robot's state in the tf tree-->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="rob_state_pub">
    <remap from="/joint_states" to="/fotokite_controllers/joint_states" />
  </node>

  <!-- Parameters for the hardware interface and controllers -->
  <rosparam file="$(find fotokite_control)/config/controller_params.yaml"/>

  <!-- Start position controllers -->
  <!--group unless="$(arg run_trajectory)">
      <node name="controller" pkg="controller_manager" type="spawner"
            respawn="false" ns="/fotokite" output="screen"
            args="/svenzva_controllers/joint_1 /svenzva_controllers/joint_2 /svenzva_controllers/joint_3 /svenzva_controllers/joint_4 /svenzva_controllers/joint_5 /svenzva_controllers/joint_6  /svenzva_controllers/joint_state_controller " />
  </group-->

  <!-- Start trajectory controllers (needed for MoveIt!)-->
  <group if="$(arg run_trajectory)">
      <node name="fotokite_trajectory_controller" pkg="controller_manager" type="spawner"
          output="screen" ns="fotokite_controllers"
          args="effort_joint_trajectory_controller
                joint_state_controller"/>
  </group>
</launch>
